@model ProjetoBitzen.Models.Motorista


<h2 class="display-4">Cadastrar Motoristas</h2>

<form asp-action="Criar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label >Nome *</label>
        <input type="text" class="form-control" id="nomeMotorista" asp-for="Nome" placeholder="Nome">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CPF *</label>
        <input type="text" class="form-control" id="CPF" asp-for="CPF" placeholder="CPF">
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Número CNH</label>
        <input type="text" class="form-control" id="CNH" asp-for="CNH" placeholder="CNH">
    </div>

    <div class="form-group">
        <label>Categoria CNH </label><br />
        <input type="text" class="form-control" asp-for="Categoria" maxlength="5" placeholder="Categoria">
    </div>

    <div class="form-group">
        <label>Data de nascimento</label>
        <input type="text" class="form-control" id="DATA" asp-for="DataNascimento" placeholder="">
    </div>


    <div class="form-group">
        <label>Status</label><br />
        <select id="Status" asp-for="Status">
            <option value="1">Ativo</option>
            <option value="0">Inativo</option>
        </select>
    </div><br />
    <button type="submit" class="btn btn-primary">Salvar</button>
    <button type="button" class="btn btn-secondary" asp-action="Home">Voltar</button>

</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
